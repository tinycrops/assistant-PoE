# Copy to .env and fill in real values. Do not commit your .env.

# Path of Exile session cookie (32 hex chars), used for private/account-bound endpoints.
POESESSID="0123456789abcdef0123456789abcdef"

# Optional defaults for this workspace.
DEFAULT_ACCOUNT="Name#1234"
DEFAULT_CHARACTER="YourCharacterName"
DEFAULT_REALM="pc"
DEFAULT_LEAGUE="Standard"

# Optional integrations.
DISCORD_WEBHOOK_URL="https://discord.com/api/webhooks/..."
OPENAI_API_KEY="sk-..."

# Optional OAuth flow config (if using poe_oauth_login.py / oauth stash flow).
OAUTH_CLIENT_ID="your_client_id"
OAUTH_CLIENT_SECRET="your_client_secret_if_any"
OAUTH_TOKEN_FILE="logs/poe_oauth_token.json"
OAUTH_CONTACT="you@example.com"

# Optional trade API pacing/logging overrides.
TRADE_API_MIN_INTERVAL_SECONDS="15"
TRADE_API_RATE_LIMIT_LOG="logs/trade_api/rate_limit_history.jsonl"
TRADE_API_STATE_PATH="logs/trade_api/last_request_at.txt"
